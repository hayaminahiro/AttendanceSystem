<% provide(:title, "勤怠編集") %>

<h1>勤怠編集ページ</h1>
<table class="table table-striped table-bordered table-condensed table-hover user-table">
  <thead>
    <tr>
      <th>日付</th>
      <th>曜日</th>
      <th >出社</th>
      <th>退社</th>
      <th>在社時間</th>
      <th>備考</th>
    </tr>
  </thead>
  
  <tbody>
    <% @dates.each do |day| %>
      <tr>
        <td><%= l(day.worked_on, format: :short1) %></td>
        <td><%= $day_of_the_week[day.worked_on.wday] %></td>
        <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
        <td><%= l(day.started_at, format: :min) if day.started_at.present? %></td>
        <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
        <td><%= l(day.finished_at, format: :min) if day.finished_at.present? %></td>
      </tr>
    <% end %>
  </tbody>
</table>